	inform "Updating Scripts $ANSWER_OPTION"
	tar xvf $ANSWER_OPTION
	
	if [ ! -f "/tmp/howto.sh" ]; then
		tar xvf $ANSWER_OPTION -C /usr/local/bin/
		sudo chmod 777 /usr/local/bin/*
	else	
	
	sh howto.sh

	fi

	#Updatemenu.sh
	return 0
}

